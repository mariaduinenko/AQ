<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="40px"
        android:layout_marginRight="70px"
        android:background="@color/divider_color"
        android:layout_marginTop="40px"/>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="40px"
            android:paddingTop="40px"
            >
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30px"
                >
                <ImageView android:layout_width="45px"
                    android:layout_height="45px"
                    android:id="@+id/like_image"
                    android:layout_marginRight="10px"
                    android:src="@drawable/like"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/count_likes"
                    android:textColor="@color/text_color_violet"
                    android:text="3"/>

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageView  android:layout_width="45px"
                    android:layout_height="45px"
                    android:id="@+id/comment_image"
                    android:layout_marginRight="10px"
                    android:src="@drawable/comment"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/comment_count"
                    android:textColor="@color/text_color_violet"
                    android:text="1"/>

            </TableRow>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="50px"
            android:paddingLeft="24px"
            android:orientation="vertical"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.2"
                    android:text="@string/from"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:textColor="@color/text_color_black"
                    android:id="@+id/question_owner"
                    android:text="Бедный студент"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="80px"
                    android:id="@+id/question_date"
                    android:textColor="@color/text_color_violet"
                    android:layout_weight="2.5"
                    android:gravity="right"
                    android:paddingRight="70px"
                    android:layout_gravity="right"
                    android:text="20.10.2016 19:30" />


            </TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/question_title"
                android:text="Когда включат горячую воду в общежитии?"/>

        </LinearLayout>

    </TableRow>
</LinearLayout>